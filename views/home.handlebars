<h1>Welcome, {{user.username}}</h1>

<div class="row">

  <div class="col-sm-6">
    <div class="card">
      <div class="card-header">
        Update Account
      </div>
      <div class="card-body">
        <form class="" action="/profile" method="post">
          <div class="form-group">
            <label>Change Username</label>
            <input type="text" name="username" class="form-control">
          </div>
          <div class="form-group">
            <label>Change Password</label>
            <input type="text" name="password" class="form-control">
          </div>
          <button class="btn btn-primary">Change Password</button>
        </form>
      </div>
    </div>
  </div>

  <div class="col-sm-6">
    <div class="card">
      <div class="card-header">
        Passport Status
      </div>
      <div class="card-body">
        <ul class="list-group list-group-flush">
            {{#if photos}}
              <li class="list-group-item bg-success text-white">
                Facebook
              </li>
            {{else}}
              <li class="list-group-item">
                Facebook
                <a href="/auth/facebook" class="btn btn-success btn-sm float-right">Connect</a>
              </li>
            {{/if}}

            {{#if tweets.length}}
              <li class="list-group-item bg-success text-white">
                Twitter
              </li>
            {{else}}
              <li class="list-group-item">
                Twitter
                <a href="/auth/twitter" class="btn btn-success btn-sm float-right">Connect</a>
              </li>
            {{/if}}

            {{#if repos.length}}
              <li class="list-group-item bg-success text-white">
                Github
              </li>
            {{else}}
            <li class="list-group-item">
              Github
              <a href="/auth/github" class="btn btn-success btn-sm float-right">Connect</a>
            </li>
            {{/if}}
        </ul>
      </div>
    </div>
  </div>

</div>
<br>
<br>


